{
    "name": "Islandora REST Ingester",
    "license": "Unlicense",
    "type": "project",
    "description": "Command-line tool for ingesting content into Islandora via its REST interface.",
    "autoload": {
        "classmap": ["includes/"]
    },
    "require-dev": {
        "squizlabs/php_codesniffer":"~2.3",
        "phpunit/phpunit":"4.8.*"
    },
    "require": {
        "guzzlehttp/guzzle": "~6.0",
        "nategood/commando": "*",
        "ralouphie/mimey": "*",
        "monolog/monolog": "~1.13",
        "mjordan/irc": "dev-master"
    },
        "scripts": {
        "tests": "./vendor/bin/phpunit tests",
        "style": "./vendor/bin/phpcs --standard=PSR2 includes tests"
    }
}
